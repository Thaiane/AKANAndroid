<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/barra_extendida"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/layout_ranking_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_ranking_imagem_parlamentar"
            android:layout_centerInParent="true"
            android:text="100"
            android:textColor="#F4D271"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/layout_ranking_imagem_parlamentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/parlamentar_foto_mini" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/layout_ranking_position"
            android:layout_alignBottom="@+id/layout_ranking_position"
            android:layout_alignRight="@+id/layout_ranking_position"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="5dp"
            android:text="ยบ"
            android:textColor="#F4D271"
            android:textSize="15dp" />
    </RelativeLayout>

    

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.39" >
        
        <ImageView
            android:id="@+id/ranking_layout_content_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ranking4" />
        
        <TextView
            android:id="@+id/parlamentarRankinglistfragment_txt_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
        	android:layout_alignParentBottom="true"
        	android:textColor="#FFF"
            android:text="Valor" />
        
        <TextView
            android:id="@+id/ranking_layout_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/parlamentarRankinglistfragment_txt_valor"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#FFF"
            
        	android:layout_alignParentBottom="true"
            
            android:text="R$ " />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_alignBottom="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_toRightOf="@+id/parlamentarRankinglistfragment_txt_partido"
            android:text="-" />

        <TextView
            android:id="@+id/ranking_layout_txt_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ranking_layout_txt_nome"
            android:layout_marginTop="15dp"
            android:text="Partido" />
        <TextView 
            android:id="@+id/ranking_layout_txt_espace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ranking_layout_txt_partido"
            android:layout_alignTop="@+id/ranking_layout_txt_partido"
            android:layout_marginLeft="2dp"
            android:text="-"
            />

        <TextView
            android:id="@+id/ranking_layout_txt_uf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignTop="@+id/ranking_layout_txt_partido"
           	android:layout_toRightOf="@+id/ranking_layout_txt_espace"
           	android:layout_marginLeft="2dp"
            android:text="UF" />
        
        <TextView
            android:id="@+id/ranking_layout_txt_cargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ranking_layout_txt_partido"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="Dep.Federal"
            />

        <TextView
            android:id="@+id/ranking_layout_txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Nome" />

        

    </RelativeLayout>

    

</LinearLayout>