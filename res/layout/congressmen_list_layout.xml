<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/barra_extendida"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/layout_ranking_imagem_parlamentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/parlamentar_foto_mini" />

    </RelativeLayout>

    

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.39" >
        
        <TextView
            android:id="@+id/ranking_layout_txt_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:text="Valor"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_alignBottom="@+id/parlamentarRankinglistfragment_txt_partido"
            android:layout_toRightOf="@+id/parlamentarRankinglistfragment_txt_partido"
            android:text="" />

        <TextView
            android:id="@+id/ranking_layout_txt_partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ranking_layout_txt_nome"
            android:layout_marginTop="30dp"
            android:textColor="#536571"
            android:text="Partido" />
        <TextView 
            android:id="@+id/ranking_layout_txt_espace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ranking_layout_txt_partido"
            android:layout_alignTop="@+id/ranking_layout_txt_partido"
            android:layout_marginLeft="2dp"
            android:text="-"
            />

        <TextView
            android:id="@+id/ranking_layout_txt_uf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignTop="@+id/ranking_layout_txt_partido"
           	android:layout_toRightOf="@+id/ranking_layout_txt_espace"
           	android:layout_marginLeft="2dp"
           	android:textColor="#536571"
            android:text="UF" />

        <TextView
            android:id="@+id/ranking_layout_txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#536571"
            android:text="nome" />

        

    </RelativeLayout>
<RelativeLayout
    	android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"		
        android:layout_marginTop="15dp" >
        
    <Button
               android:id="@+id/btn_follow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/seguidos_desativado" />     
    
    />
    
</RelativeLayout>
    

</LinearLayout>